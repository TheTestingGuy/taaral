---
import "@styles/global.css"

const { logoLabel } = Astro.props;
---

<header
  class="fixed top-0 left-0 right-0 z-50 flex items-center justify-between border-b border-white/5 bg-[#161212]/90 backdrop-blur-md px-6 py-4 md:px-10 lg:px-20 transition-all duration-300"
>
  <div class="flex items-center gap-3">
    <div class="size-8 text-primary">
      <span class="material-symbols-outlined text-3xl">architecture</span>
    </div>
    <h2 class="text-white text-xl font-serif font-bold tracking-tight">
      {logoLabel}
    </h2>
  </div>
  <nav class="hidden md:flex items-center gap-10">
    <a
      class="text-white/80 hover:text-white text-sm font-medium transition-colors"
      href="#work">Work</a
    >
    <a
      class="text-white/80 hover:text-white text-sm font-medium transition-colors"
      href="#philosophy">Philosophy</a
    >
    <a
      class="text-white/80 hover:text-white text-sm font-medium transition-colors"
      href="#contact">Contact</a
    >
  </nav>
  <button
    class="hidden md:flex items-center justify-center rounded-lg bg-primary hover:bg-primary-dark transition-colors h-10 px-6 text-white text-sm font-bold tracking-wide"
  >
    Get in Touch
  </button>
  <!-- Mobile Menu Button -->
  <button class="md:hidden text-white">
    <span class="material-symbols-outlined">menu</span>
  </button>
</header>
